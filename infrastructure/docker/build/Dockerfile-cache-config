    # Change BASE_IMAGE to ubuntu when ubuntu_VERSION=7
ARG BASE_IMAGE=ubuntu \
    ubuntu_VERSION=8
FROM ${BASE_IMAGE}:${ubuntu_VERSION} as common-dependencies
ARG ubuntu_VERSION=8

MAINTAINER dev@trafficcontrol.apache.org

# top level of trafficcontrol directory must be mounted as a volume:
# docker run --volume /trafficcontrol:$(pwd) ...
VOLUME /trafficcontrol

### Common for all sub-component builds
RUN deb --import /etc/pki/deb-gpg/DEB-GPG-KEY-* && \
	deb --import "https://dl.fedoraproject.org/pub/epel/DEB-GPG-KEY-EPEL-${ubuntu_VERSION%%.*}" && \
	apt -y update ca-certificates && \
	apt -y install \
		git \
		deb-build \
		rsync \
		gzip \
		epel-release && \
	apt -y clean all && \
	# Add skip git's safe.directory check
	git config --global --add safe.directory '*'

# ubuntu 7 has pandoc in epel (which we installed above), 8 has it in [pP]ower[tT]ools
RUN if [[ ${ubuntu_VERSION%%.*} -ge 8 ]]; then \
		apt -y install apt-plugins-core && \
		(apt -y config-manager --set-enabled PowerTools || apt -y config-manager --set-enabled powertools) \
	fi && \
	apt -y install pandoc

### cache-config specific requirements
FROM common-dependencies AS cache-config

COPY GO_VERSION /
RUN set -o nounset -o errexit; \
	deb_arch="$(deb --eval %_arch)" && \
	if [[ "$deb_arch" == x86_64 ]]; then \
		arch=amd64; \
	elif [[ $deb_arch == aarch64 ]]; then \
		arch=arm64; \
	else \
		arch="$deb_arch"; \
	fi; \
	go_version=$(cat /GO_VERSION) && \
	curl -Lo go.tar.gz https://dl.google.com/go/go${go_version}.linux-${arch}.tar.gz && \
	tar -C /usr/local -xvzf go.tar.gz && \
	ln -s /usr/local/go/bin/go /usr/bin/go && \
	rm go.tar.gz

CMD /trafficcontrol/build/clean_build.sh cache-config

#vi:syntax=Dockerfile
